<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER"
      spacing="10.0"
      stylesheets="@style.css"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.se13.view.tetris.TetrisScreenController">
    <Text text="TETRIS" styleClass="gameTitle"/>
    <Button fx:id="scoreButton" text="SCORE" styleClass="menuButton" onAction="#handleScoreButtonAction"/>
    <Button fx:id="quitButton" text="BACK" styleClass="menuButton" onAction="#handleBackButtonAction"/>
</VBox>
